<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp">


    <TextView
        android:id="@+id/menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="10dp"
        android:text="menu_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <TextView


        android:id="@+id/caption_menu_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/menu_options"

        android:text="caption_menu_description"
        android:textColor="@color/colorPrimary"
 />
    <TextView
        android:id="@+id/menu_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="menu_description"
        android:textColor="@color/title"
        android:textSize="16dp"

        android:textStyle="bold"
        android:layout_toEndOf="@+id/caption_menu_description"
        android:layout_alignTop="@+id/caption_menu_description"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/order_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_description"

        android:text="order_no"
        android:textColor="@color/title"
        android:textSize="16dp"
        android:textStyle="bold"
        android:visibility="gone" />


    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_description"

        android:layout_alignParentStart="true"
        android:layout_marginRight="320dp"
        android:text="time"
        android:visibility="gone" />

    <TextView
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_description"
        android:layout_marginRight="50dp"
        android:text="cost"
        android:visibility="gone" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_description"

        android:text="status"
        android:textColor="@color/year"
        android:visibility="gone" />

    <TextView
        android:id="@+id/caption_menu_radios"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_title"
        android:background="@drawable/textleftcorner"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="2dp"
        android:text="Wahl"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:textColor="@color/colorPrimary" />

    <TextView

        android:id="@+id/menu_radios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="menu_radios"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/caption_menu_radios"

        />

    <TextView


        android:id="@+id/caption_menu_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"

        android:text="nicht gewÃ¼nschte Zutat"
        android:textColor="@color/colorPrimary"


        android:layout_below="@+id/menu_radios" /><!--notwantedcaption-->


    <TextView

        android:id="@+id/menu_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:text="menu_contents"

        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@id/caption_menu_contents"/>
      <!--  android:layout_alignBaseline="@+id/caption_menu_contents"
        android:layout_alignBottom="@+id/caption_menu_contents"
        android:layout_toEndOf="@+id/caption_menu_contents"-->


        <TextView


            android:id="@+id/caption_menu_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"

            android:text="Extras"
            android:textColor="@color/colorPrimary"


            android:layout_below="@+id/menu_contents" /><!--notwantedcaption-->


        <TextView

            android:id="@+id/menu_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="menu_contents"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@id/caption_menu_options"
         /><!--notwantedconted-->
<!--    android:layout_alignBaseline="@+id/caption_menu_options"
    android:layout_alignBottom="@+id/menu_contents"
    android:layout_toEndOf="@+id/caption_menu_options"-->

</RelativeLayout>