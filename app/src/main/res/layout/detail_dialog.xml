<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="preparing time"
        android:padding="25dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />
    <ImageView
        android:id="@+id/image"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:foregroundGravity="center_vertical"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true" />
    <RadioGroup
        android:id="@+id/radio_group_customer"
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/image"
        android:layout_alignParentStart="true"

        android:paddingTop="60dp" >
        <RadioButton
            android:text="Reject_reason1"
            android:id="@+id/Reject_reason1"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="40dp"
            />
        <RadioButton
            android:text="Reject_reason2"
            android:id="@+id/Reject_reason2"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="40dp"
            />
        <RadioButton
            android:text="Reject_reason3"
            android:id="@+id/Reject_reason3"

            android:layout_gravity="center_horizontal"
            android:textSize="40dp"
            />


    </RadioGroup>
    <RadioGroup
        android:id="@+id/radio_group_restaurant"
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/image"
        android:layout_alignParentStart="true"

        android:paddingTop="20dp">
        <RadioButton
            android:text="Accept15"
            android:id="@+id/Accept15"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="40dp"
            />
        <RadioButton
            android:text="Accept30"
            android:id="@+id/Accept30"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="40dp"
            />
        <RadioButton
            android:text="Accept45"
            android:id="@+id/Accept45"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="40dp"
            />
        <RadioButton
            android:text="Accept60"
            android:id="@+id/Accept60"

            android:layout_gravity="center_horizontal"
            android:textSize="40dp"
            />


    </RadioGroup>

    <TextView
        android:id="@+id/textWarning"
        android:layout_width="fill_parent"
        android:layout_below="@+id/image"
        android:gravity="center"
        android:textSize="30dp"


        android:text="Weet je het zeker?"
        android:layout_height="300dp" />
    <LinearLayout
        android:id="@+id/ln22"
        android:layout_width="match_parent"
        android:layout_below="@+id/radio_group_restaurant"
        android:layout_alignParentEnd="true"

        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="0.6">

        <Button
            android:id="@+id/dialogButtonOK"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text=" Ok "
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"

            />
        <Button
            android:id="@+id/dialogButtonCancel"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text=" Abbrechen "
            android:layout_marginRight="5dp"

            android:layout_marginTop="5dp" />
    </LinearLayout>
</RelativeLayout>