<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"

        android:padding="25dp"
        android:text="preparing time"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:foregroundGravity="center_vertical"
        android:padding="5dp" />

    <RadioGroup
        android:id="@+id/radio_group_customer"
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/image"
        android:layout_gravity="center_vertical"
        android:paddingTop="10dp">

        <RadioButton
            android:id="@+id/Reject_reason1"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:text="Falsches Produkt geliefert"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/Reject_reason2"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:text="Produkt nicht hygienisch"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/Reject_reason3"
            android:layout_gravity="left"

            android:layout_marginBottom="10dp"
            android:text="Bestellung nicht vollständig"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/Reject_reason4"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"

            android:text="Lieferung zu spät"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/Reject_reason5"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"

            android:text="Lieferung wurde nicht geliefert"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/Reject_reason6"
            android:layout_gravity="left"

            android:layout_marginBottom="10dp"
            android:text="Person oder Adresse nicht gefunden"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/Reject_reason7"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:text="Keine Zahlung erhalten"

            android:textSize="25dp" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radio_group_restaurant"
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/image"
        android:layout_gravity="center_vertical"

        android:paddingTop="20dp">

        <RadioButton
            android:id="@+id/Accept15"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="LIEFERUNG in 15 Min."
            android:textSize="40dp" />

        <RadioButton
            android:id="@+id/Accept30"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="LIEFERUNG in 30 Min."
            android:textSize="40dp" />

        <RadioButton
            android:id="@+id/Accept45"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="LIEFERUNG in 45 Min."
            android:textSize="40dp" />

        <RadioButton
            android:id="@+id/Accept60"
            android:layout_gravity="center_horizontal"

            android:text="LIEFERUNG in 60 Min."
            android:textSize="40dp" />


    </RadioGroup>

    <TextView
        android:id="@+id/textWarning"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/image"
        android:gravity="center"


        android:text="Sind Sie Sicher? "
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_below="@+id/radio_group_restaurant"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="0.6">

        <Button
            android:id="@+id/dialogButtonOK"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:text=" Ok "

            />

        <Button
            android:id="@+id/dialogButtonCancel"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"

            android:text=" Abbrechen " />
    </LinearLayout>
</RelativeLayout>